<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectAsesoria">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione el tipo de asesoria que decea realizar"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="75dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnFis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asesoria Por fiscalizacion" />

        <Button
            android:id="@+id/btnAcci"
            android:layout_width="222dp"
            android:layout_height="55dp"
            android:text="Asesoria por Accidente"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="403dp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
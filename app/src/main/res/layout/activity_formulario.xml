<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".formulario">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="@string/logo"
        app:layout_column="0"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblTituloFormulario"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_row="0"
        app:srcCompat="@drawable/nmalogo" />

    <TextView
        android:id="@+id/lblTituloFormulario"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="15dp"
        android:text="@string/formulariof"
        android:textAlignment="center"
        android:textColor="#090909"
        android:textIsSelectable="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toTopOf="@+id/btnConfirmar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TableRow
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:background="#F8D4D4">

            <TextView
                android:id="@+id/lbPregunta1"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="@string/pregunta1"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#090909" />

            <RadioGroup
                android:id="@+id/p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@id/p1inde">

                <RadioButton
                    android:id="@+id/p1cumple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cumple"
                    android:textColor="#090909"
                    android:textColorHint="#3A3737" />

                <RadioButton
                    android:id="@+id/p1nocumple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#857171"
                    android:text="@string/nocumple"
                    android:textColor="#050505" />

            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D3C5C5">

            <TextView
                android:id="@+id/lbPregunta"
                android:layout_width="286dp"
                android:layout_height="43dp"
                android:text="@string/pregunta2"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#090909" />

            <RadioGroup
                android:id="@+id/p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@id/p2inde">

                <RadioButton
                    android:id="@+id/p2cumple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cumple"
                    android:textColor="#040404"
                    android:textColorHint="#3A3737" />

                <RadioButton
                    android:id="@+id/p2nocumple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#857171"
                    android:text="@string/nocumple"
                    android:textColor="#050505" />

            </RadioGroup>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8D4D4">

            <TextView
                android:id="@+id/lbPregunta2"
                android:layout_width="286dp"
                android:layout_height="43dp"
                android:text="@string/pregunta3"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#090909" />

            <RadioGroup
                android:id="@+id/p4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@id/p4inde">

                <RadioButton
                    android:id="@+id/p4cumple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cumple"
                    android:textColor="#040404"
                    android:textColorHint="#3A3737" />

                <RadioButton
                    android:id="@+id/p4nocumple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#857171"
                    android:text="@string/nocumple"
                    android:textColor="#050505" />

            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D3C5C5">


            <TextView
                android:id="@+id/lbPregunta3"
                android:layout_width="286dp"
                android:layout_height="43dp"
                android:text="@string/pregunta4"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#090909" />

            <RadioGroup
                android:id="@+id/p3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@id/p3inde">

                <RadioButton
                    android:id="@+id/p3cumple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cumple"
                    android:textColor="#040404"
                    android:textColorHint="#3A3737" />

                <RadioButton
                    android:id="@+id/p3nocumple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#857171"
                    android:text="@string/nocumple"
                    android:textColor="#050505" />

            </RadioGroup>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8D4D4">

            <TextView
                android:id="@+id/lbPregunta5"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="@string/pregunta5"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#090909" />

            <RadioGroup
                android:id="@+id/p5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@id/p1inde">

                <RadioButton
                    android:id="@+id/p5cumple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cumple"
                    android:textColor="#090909"
                    android:textColorHint="#3A3737" />

                <RadioButton
                    android:id="@+id/p5nocumple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#857171"
                    android:text="@string/nocumple"
                    android:textColor="#050505" />

                <RadioButton
                    android:id="@+id/p5inde"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/indeterminado"
                    android:textColor="#050505" />
            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D3C5C5">

            <TextView
                android:id="@+id/lbPregunta6"
                android:layout_width="286dp"
                android:layout_height="43dp"
                android:text="@string/pregunta6"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#090909" />

            <RadioGroup
                android:id="@+id/p6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@id/p2inde">

                <RadioButton
                    android:id="@+id/p6cumple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cumple"
                    android:textColor="#040404"
                    android:textColorHint="#3A3737" />

                <RadioButton
                    android:id="@+id/p6nocumple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#857171"
                    android:text="@string/nocumple"
                    android:textColor="#050505" />

                <RadioButton
                    android:id="@+id/p6inde"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/indeterminado"
                    android:textColor="#050505" />
            </RadioGroup>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8D4D4">

            <TextView
                android:id="@+id/lbPregunta7"
                android:layout_width="286dp"
                android:layout_height="43dp"
                android:text="@string/pregunta7"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#090909" />

            <RadioGroup
                android:id="@+id/p7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@id/p4inde">

                <RadioButton
                    android:id="@+id/p7cumple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cumple"
                    android:textColor="#040404"
                    android:textColorHint="#3A3737" />

                <RadioButton
                    android:id="@+id/p7nocumple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#857171"
                    android:text="@string/nocumple"
                    android:textColor="#050505" />

                <RadioButton
                    android:id="@+id/p7inde"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/indeterminado"
                    android:textColor="#050505" />
            </RadioGroup>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirmar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
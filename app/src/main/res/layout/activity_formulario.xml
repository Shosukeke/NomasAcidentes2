<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEFE"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_pregunta"
        android:layout_width="match_parent"
        android:layout_height="414dp"
        android:clickable="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Button
        android:id="@+id/btn_noCumple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_pregunta"
        android:layout_marginTop="98dp"
        android:background="@drawable/button_log"
        android:text="@string/no_cumple" />

    <Button
        android:id="@+id/btn_guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_pregunta"
        android:layout_marginTop="149dp"
        android:background="@drawable/button_log"
        android:text="@string/guardar" />

    <Button
        android:id="@+id/btn_cumple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_pregunta"
        android:layout_marginTop="45dp"
        android:background="@drawable/button_log"
        android:text="@string/cumple" />
</RelativeLayout>